{% capture powered_by_link %} {{ 'footer.powered_by' | t }} <a href="https://www.shopify.com/" rel="noopener" target="_blank" rel="nofollow">Shopify</a>.{% endcapture %}

<div class="footer-copyright">
  <span>&copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: routes.root_url }}.</span>
  <span>{{ powered_by_link }}</span>
  {% comment %}
  {%- for link in linklists[section.settings.bottom_menu].links -%}
   {%- if link.title == 'Size Guide' -%}
      <a href="{{ link.url }}" id="size_guide_footer" class="footer-copyright__link size_guide_footer">{{ link.title | strip_html | escape }}</a>
    {%- else -%}
    <a href="{{ link.url }}" id="{{ link.title | strip_html | escape }}" class="footer-copyright__link">{{ link.title | strip_html | escape }}</a>
  {%- endif -%}
  {%- endfor -%}
  {% endcomment %}
</div>