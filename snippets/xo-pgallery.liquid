{%- comment -%} File generated by XO Gallery app, do not edit here {%- endcomment -%}
{%- assign xoProductTagsString = product.tags | join: ' ' -%}
{%- assign xoBreakLoop = false -%}

{%- for pG in shop.metafields.xo_gallery.pgallery.value -%}
  {%- case pG.apply -%}
    {%- when 'tag' -%}
      {%- for xT in pG.tags -%}
        {%- if xoProductTagsString contains xT -%}
          <div class="xo-gallery" data-id="{{ pG.gallery }}" data-pid="{{ product.id }}"></div>
          {%- assign xoBreakLoop = true -%}
          {%- break -%}
        {%- endif -%}
      {%- endfor -%}
    {%- when 'type' -%}
      {%- for xT in pG.types -%}
        {%- if product.type == xT -%}
          <div class="xo-gallery" data-id="{{ pG.gallery }}" data-pid="{{ product.id }}"></div>
          {%- assign xoBreakLoop = true -%}
          {%- break -%}
        {%- endif -%}
      {%- endfor -%}
    {%- when 'vendor' -%}
      {%- for xV in pG.vendors -%}
      {%- if product.type == xV -%}
        <div class="xo-gallery" data-id="{{ pG.gallery }}" data-pid="{{ product.id }}"></div>
        {%- assign xoBreakLoop = true -%}
        {%- break -%}
      {%- endif -%}
      {%- endfor -%}
    {%- when 'all' -%}
      <div class="xo-gallery" data-id="{{ pG.gallery }}" data-pid="{{ product.id }}"></div>
      {%- assign xoBreakLoop = true -%}
  {%- endcase -%}
  {%- if xoBreakLoop -%}
    {%- break -%}
  {%- endif -%}
{%- endfor -%}