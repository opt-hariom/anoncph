<section class="textImgSection leftText {{ section.settings.sectionClass }}">
  <div class="sec-container-big">
    <div class="text-center">
      <h3>{{ section.settings.heading }}</h3>
      <p>{{ section.settings.description }}</p>
      <p class="text-lite">{{ section.settings.liteText }} <a href="{{ section.settings.link }}"><i>{{ section.settings.linktext }}</i></a></p>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Title and description",
  "settings": [
    {
      "type": "text",
      "id": "sectionClass",
      "label": "Section Class"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "liteText",
      "label": "Light text"
    },
    {
      "type": "text",
      "id": "linktext",
      "label": "Text For Link"
    },
    {
      "type": "url",
      "id": "link",
      "label": "URL"
    }
  ],
  "presets": [
    {
      "name": "Title and description",
      "category": "Text"
    }
  ]
}
{% endschema %}