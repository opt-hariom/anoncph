<section class="textImgSection leftText pt248 {{ section.settings.sectionClass }}">
  <div class="sec-container-big">
    <div class="imgTextrow">
      <div class="textColumn">
        <h3>{{ section.settings.heading }}</h3>
        <p>{{ section.settings.description }}</p>
        <p class="text-lite">{{ section.settings.liteText }} <a href="{{ section.settings.link }}"><i>{{ section.settings.linktext }}</i></a></p>
      </div>
      <div class="imgColumn">
        <img class="img-450" style="width: 100%" src="{{ section.settings.image | img_url: '512x' }}" alt="{{ section.settings.image.alt | escape }}">
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Text Image Section",
  "settings": [
    {
      "type": "text",
      "id": "sectionClass",
      "label": "Section Class"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "liteText",
      "label": "Light text"
    },
    {
      "type": "text",
      "id": "linktext",
      "label": "Text For Link"
    },
    {
      "type": "url",
      "id": "link",
      "label": "URL"
    }
  ],
  "presets": [
    {
      "name": "Text Image Section",
      "category": "Text"
    }
  ]
}
{% endschema %}